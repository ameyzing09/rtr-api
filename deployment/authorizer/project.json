{
  "name": "authorizer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "infrastructure",
  "sourceRoot": "deployment/authorizer",
  "targets": {
    "deploy:dev": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/authorizer/environments/dev"
      }
    },
    "deploy:ppe": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/authorizer/environments/ppe"
      }
    },
    "deploy:prod": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/authorizer/environments/prod"
      }
    },
    "plan:dev": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform plan",
        "cwd": "deployment/authorizer/environments/dev"
      }
    }
  },
  "tags": ["infrastructure", "aws", "lambda", "authorizer", "authentication"]
