{
  "name": "api-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "infrastructure",
  "sourceRoot": "deployment/api-gateway",
  "targets": {
    "deploy:dev": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/api-gateway/environments/dev"
      }
    },
    "deploy:ppe": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/api-gateway/environments/ppe"
      }
    },
    "deploy:prod": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform apply -auto-approve",
        "cwd": "deployment/api-gateway/environments/prod"
      }
    },
    "plan:dev": {
      "executor": "@nx/run-commands",
      "options": {
        "command": "terraform plan",
        "cwd": "deployment/api-gateway/environments/dev"
      }
    }
  },
  "tags": ["infrastructure", "aws", "api-gateway", "networking"]
}
